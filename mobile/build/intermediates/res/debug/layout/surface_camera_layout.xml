<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    >

    <LinearLayout
        android:id="@+id/top_bar"
        android:layout_width="fill_parent"
        android:layout_height="?android:attr/actionBarSize"
        android:orientation="horizontal">


            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight=".05"
                >
            </LinearLayout>


        <ImageView
            android:id="@+id/moreInfoButton"
            android:layout_height="fill_parent"
            android:layout_width="0dp"
            android:layout_weight=".15"
            android:src="@drawable/ic_action_info"
            >
        </ImageView>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight=".6"
                >
            </LinearLayout>

        <ImageView
            android:id="@+id/shareButton"
            android:layout_height="fill_parent"
            android:layout_width="0dp"
            android:layout_weight=".15"
            android:src="@drawable/abc_edit_text_material"
            >
        </ImageView>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight=".05"
                >
            </LinearLayout>





    </LinearLayout>



    <RelativeLayout
        android:id="@+id/surface_layout"
        android:layout_width="fill_parent"
        android:layout_height="200px">

        <SurfaceView
        android:id="@+id/surface_camera"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        />

        <ImageView

            android:id="@+id/waterMarkPic"
            android:layout_height="100dp"
            android:layout_width="100dp"
            android:layout_alignBottom="@+id/surface_camera"
            android:src="@drawable/ic_yes_icon"
            android:visibility="visible"
            android:layout_marginLeft="20dp">
        </ImageView>

    </RelativeLayout>


    <LinearLayout
        android:id="@+id/bottom_bar"
        android:layout_width="fill_parent"
        android:layout_height="200px"
        android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight=".1"
                >
            </LinearLayout>

        <ImageView

            android:id="@+id/retakeButton"
            android:layout_height="fill_parent"
            android:layout_width="0dp"
            android:layout_weight=".2"
            android:src="@drawable/ic_content_clear"
            android:visibility="invisible"
            >
        </ImageView>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight=".1"
            >
        </LinearLayout>

        <ImageView

            android:id="@+id/selfieButton"
            android:layout_height="fill_parent"
            android:layout_width="0dp"
            android:layout_weight=".2"
            android:src="@drawable/ic_selfie"
            >
        </ImageView>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight=".1"
                >
            </LinearLayout>

        <ImageView

            android:id="@+id/shareButtonBotom"
            android:layout_height="fill_parent"
            android:layout_width="0dp"
            android:layout_weight=".2"
            android:src="@drawable/ic_shareb"
            android:visibility="invisible"
            >  </ImageView>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight=".1"
            >
        </LinearLayout>




    </LinearLayout>

</LinearLayout><!-- From: file:/home/rory/Dropbox/workspace/AndroidStudio/android-app/mobile/src/main/res/layout/surface_camera_layout.xml -->