<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">

    <RelativeLayout
        android:id="@+id/surface_layout"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <SurfaceView
            android:id="@+id/surface_camera"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" />

        <ImageView
            android:id="@+id/waterMarkPic"
            android:layout_height="150dp"
            android:layout_width="150dp"
            android:src="@drawable/ic_vote_for_me"
            android:visibility="visible"
            android:layout_alignBottom="@+id/surface_camera"
            android:layout_marginLeft="20dp"
            android:layout_marginBottom="220dp" />

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/top_bar"
        android:layout_width="fill_parent"
        android:layout_height="?android:attr/actionBarSize"
        android:layout_gravity="top"
        android:layout_marginTop="0dp"
        android:orientation="horizontal"
        android:background="#ffffff">


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight=".05" />


        <ImageView
            android:id="@+id/moreInfoButton"
            android:layout_height="fill_parent"
            android:layout_width="0dp"
            android:layout_weight=".15"
            android:src="@drawable/ic_action_info" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight=".6" />

        <ImageView
            android:id="@+id/reminderButton"
            android:layout_height="fill_parent"
            android:layout_width="0dp"
            android:layout_weight=".15"
            android:src="@drawable/ic_reminders" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight=".05" />


    </LinearLayout>

    <LinearLayout
        android:id="@+id/bottom_bar"
        android:layout_width="fill_parent"
        android:layout_height="200dp"
        android:layout_gravity="bottom"
        android:layout_marginBottom="0dp"
        android:orientation="horizontal"
        android:background="#ffffff">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight=".1" />

        <ImageView
            android:id="@+id/retakeButton"
            android:layout_height="fill_parent"
            android:layout_width="0dp"
            android:layout_weight=".2"
            android:src="@drawable/ic_content_clear"
            android:visibility="invisible" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight=".1" />

        <ImageView
            android:id="@+id/selfieButton"
            android:layout_height="fill_parent"
            android:layout_width="0dp"
            android:layout_weight=".2"
            android:src="@drawable/ic_selfie" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight=".1" />

        <ImageView

            android:id="@+id/shareButtonBotom"
            android:layout_height="fill_parent"
            android:layout_width="0dp"
            android:layout_weight=".2"
            android:src="@drawable/ic_shareb"
            android:visibility="invisible" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight=".1" />
    </LinearLayout>

</FrameLayout>