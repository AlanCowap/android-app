<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/dark_cyan"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="ie.yesequality.yesequality.NotificationActivity">

    <android.support.v7.widget.SwitchCompat
        android:id="@+id/switchDayBefore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/switchOnDay"
        android:layout_marginTop="113dp"
        android:checked="false"
        android:text="@string/notificationDayBefore"
        android:textColor="#ffffff"
        android:textStyle="bold"/>

    <android.support.v7.widget.SwitchCompat
        android:id="@+id/switchOnDay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/switchDayBefore"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/switchDayBefore"
        android:layout_marginTop="46dp"
        android:checked="false"
        android:text="@string/NotificationOnDay"
        android:textColor="#ffffff"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/tvOnDay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/switchOnDay"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/switchOnDay"
        android:layout_below="@+id/switchOnDay"
        android:text="@string/dontForgetOnDay"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="#ffffff" />

    <TextView
        android:id="@+id/tvDayBefore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/switchDayBefore"
        android:layout_alignLeft="@+id/switchDayBefore"
        android:layout_alignRight="@+id/switchDayBefore"
        android:layout_alignStart="@+id/switchDayBefore"
        android:layout_below="@+id/switchDayBefore"
        android:text="@string/dontForgetDayBefore"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="#ffffff" />

</RelativeLayout>
